<?xml version="1.0"?>
<assembly>
    <id>dist</id>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
        <format>tar.bz2</format>
    </formats>
    <baseDirectory>gldapo</baseDirectory>
    <includeSiteDirectory>true</includeSiteDirectory>
    <dependencySets>
        <dependencySet>
            <outputDirectory>deps</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>src/main</directory>
            <outputDirectory>src</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>target/site</directory>
            <outputDirectory>site</outputDirectory>
        </fileSet>
        <fileSet>
            <includes>
                <include>readme*</include>
                <include>license*</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>target/gldapo-${project.version}.jar</source>
        </file>
        <file>
            <source>src/test/resources/gldapoexample.groovy</source>
        </file>
    </files>
</assembly>
